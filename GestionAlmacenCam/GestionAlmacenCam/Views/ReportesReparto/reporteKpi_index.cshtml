<div ng-init="initAll(); ">

    <br />
    <br />
    <section id="ubicacion">
        <div class="panel-body ContentFilters contentCombo">
 


            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <div class="well" style="background-color:#dfe4ea;padding-bottom:0px;padding-top:0px">
                        <br />

                        <center> <h3>Reporte especial de ventas KPI </h3> </center>

                        <div class="row">
                            <div class="col-sm-12">
                                <label class="col-sm-12 control-label" style="text-align :left">Local</label>
                                <br />
                                <select class="selectFiltros" id="cbo_local" ng-model="Objeto_ParametroFiltro.id_local">
                                    <option value="0">[ ----  TODOS  --- ]</option>
                                    <option ng-repeat="item in Lista_Local" value="{{item.id_Local}}">{{item.nombre_Local}}</option>
                                </select>

                            </div>
                        </div>
                        

                        <div class="row">
                            <div class="col-sm-12" style=" margin-bottom: -20px;">
                                <div class="form-group">
                                    <label class="col-sm-12 control-label" style="text-align :left">Rango de Fechas</label>
                                    <br>
                                    <div class="input-group col-sm-12">
                                        <input ng-model="Objeto_ParametroFiltro.fecha_ini" id="dtp_fechaIni_filtro" type="text" class="form-control datepicker" placeholder="dia/mes/año">
                                        <span class="input-group-addon bg-primary" style="color:white"> Hasta </span>
                                        <input ng-model="Objeto_ParametroFiltro.fecha_fin" id="dtp_fechaFin_filtro" type="text" class="form-control datepicker" placeholder="dia/mes/año">
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-6" style=" margin-bottom: -20px;">
                                <div class="form-group">
                                    <label class="col-sm-12 control-label" style="text-align :left">Fecha de cierre</label>
                                    <br />
                                    <input type="text" class="form-control datepicker" ng-model="Objeto_ParametroFiltro.fecha_cierre" id="fecha_cierre" placeholder="Fecha - mm/dd/yyyy">

                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row" style=" margin-bottom: -20px;">
                            <div class=" col-sm-6  has-success has-feedback">
                                <label class=" control-label" for="inputSuccess"> Drop size</label>
                                <br />
                                <input type="number" class="form-control" style="text-align: right;" ng-model="Objeto_ParametroFiltro.drop"  >
                            </div>
                        </div>
                        <br />
                        <div class="row" style=" margin-bottom: -20px;">
                            <div class="col-sm-6 has-warning has-feedback">
                                <label class=" control-label" for="inputWarning"> Efectividad</label>
                                <br />
                                <input type="number" class="form-control" min="1" max="100" style="text-align: right;" ng-model="Objeto_ParametroFiltro.efectividad"  >
                                <span class="form-control-feedback">%</span>
                            </div>

                            <div class=" col-sm-6 has-error has-feedback">
                                <label class=" control-label" for="inputError"> Distribucion</label>
                                <br />
                                <input type="number" class="form-control" min="1" max="100" style="text-align: right;" ng-model="Objeto_ParametroFiltro.distribucion" id="dtp_fechaIni_filtro">
                                <span class="form-control-feedback">%</span>
                            </div>
                        </div>

                        <br />
                        <br />
                        <div class="row">
                            <div class="col-sm-12" style=" margin-bottom: -20px;">
                                <div class="form-group" style=" margin-top: 5px; text-align:center ">
                                    <button class="btn btn-success" ng-click="descargarReporteKpi()"><span class="glyphicon glyphicon-download-alt"></span> Descargar</button>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="form-inline ">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div style="text-align:center">
                                        <div class="cssload-speeding-wheel" ng-if="loaderfiltros"></div>
                                    </div>
                                </div>
                            </div>
                            <a id="id_link" href="" download style="display:none">link</a>
                        </div>

                    </div>
                </div>

                <div class="col-sm-12 col-md-3 col-lg-3">
                </div>
            </div>



        </div>
    </section>

 
    <div style="padding-left: 45%;" ng-if="showLoaderSave">
        <p class="loader">
        </p>
    </div>

</div>



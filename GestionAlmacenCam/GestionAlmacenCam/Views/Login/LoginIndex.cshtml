<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="../plugins/images/favicon.png">
    <title>Pixel Admin - Responsive Admin Dashboard Template build with Twitter Bootstrap</title>
</head>

<body>
    <section id="wrapper" class="login-register" style="    margin-left: -21px;">
        <div class="login-box" style="box-shadow: 2px 2px 5px -2px rgba(0,0,0,0.59);">
            <div class="white-box">
                <form class="form-horizontal form-material" id="loginform">


                    <img src="~/Plugins/images/LOGO1.jpg" style="width:100%;  margin-bottom: 15px;" />
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" ng-model="paramsSesion.usuario" placeholder="Usuario">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" type="password" required="" ng-model="paramsSesion.pass" placeholder="Contraseña">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                @*<input id="checkbox-signup" type="checkbox">
                                    <label for="checkbox-signup"> Recordar Usuario </label>*@
                            </div>
                            <a href="javascript:void(0)" ng-click="openModal_recuperarPassword()" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Recuperar Contraseña?</a>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" ng-click="IniciarSesion()">Iniciar Sesión</button>
                        </div>
                    </div>
                    <div class="cssload-speeding-wheel" ng-show="paramsLoad.showLoader"></div>
                    <div class="row" ng-if="ok">
                        <div class="col-xs-12 col-sm-12 col-md-12 m-t-10 text-center">
                            <div class="social"><a href="javascript:void(0)" class="btn  btn-facebook" data-toggle="tooltip" title="Login with Facebook"> <i aria-hidden="true" class="fa fa-facebook"></i> </a> <a href="javascript:void(0)" class="btn btn-googleplus" data-toggle="tooltip" title="Login with Google"> <i aria-hidden="true" class="fa fa-google-plus"></i> </a> </div>
                        </div>
                    </div>
                </form>
                <form class="form-horizontal" id="recoverform">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            @*<h3>Recover Password</h3>
                                <p class="text-muted">Enter your Email and instructions will be sent to you! </p>*@
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>



    <div id="modalRecuperar" class="modal fade bd-example-modal-lg ModalBorderSombra  " tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <center> <h3 class="titulo">Recuperar Contraseña </h3> </center>
                </div>
                <div class="modal-body       ">
                    <div class="loaderModal" ng-if="loaderSaveD"></div>
                    <div class="row">
                        <div class="col-md-12 ">
                            <label class="control-label" style="font-size: 11px; font-family: tahoma; color: #2c5ca9; font-weight: 600;"> Ingrese Correo</label>
                            <input type="text" ng-model="retrieveEmail" ng-enter="consultarRuc(Objeto_Parametro_egresos.rucProveedor)" class="form-control input-sm" style="background-color: beige; font-size: 17px; font-weight: 700; color: #3e4d6c; text-align: center;" placeholder="">
                        </div> 
                    </div>  
                </div>
                <div class="modal-footer ">
                    <button id="btn-material" class="btn btn-success btn-sm m-l-10" ng-click="set_recuperarPassword_Email();"> <i class="glyphicon glyphicon-floppy-saved"></i> Enviar Correo</button>
                    <a class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove-sign"></span> Cerrar</a>
                </div>
            </div>
        </div>
    </div>



</body>
 

</html>

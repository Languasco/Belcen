<div class="container" ng-init="initAll();">
    <div class="panel-body ContentFilters contentCombo">
        <div class="row">
            <div class="col-sm-12 col-md-3 col-lg-3">
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="well" style="background-color:#dfe4ea;padding-bottom:0px;padding-top:0px">
                    <br />
                    <center> <h3>Reporte de Ventas</h3> </center>

                    <div class="row">
                        <div class="col-sm-12">
                            <label for="cbo_anexo" class="control-label"> Anexo </label> <span class="help-block"></span>
                            <select class="selectFiltros" id="cbo_anexo" style="width:95%;" data-style="btn-default" ng-model="Objeto_ParametroFiltro.id_Anexos" ng-change="listados_changeAlmacenes(Objeto_ParametroFiltro.id_Anexos,Objeto_ParametroFiltro.id_local ); listados_changeZonas(Objeto_ParametroFiltro.id_Anexos,Objeto_ParametroFiltro.id_local,Objeto_ParametroFiltro.id_almacen )">
                                <option value="0">[ ----  TODOS  --- ]</option>
                                <option ng-repeat="item in lista_anexos" value="{{item.id}}">{{item.descripcion}}</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-10">
                            <label class="control-label" for="cbo_local">Local</label> <span class="help-block"></span>
                            <select class="selectFiltros" id="cbo_local" ng-model="Objeto_ParametroFiltro.id_local" ng-change="listados_changeAlmacenes(Objeto_ParametroFiltro.id_Anexos,Objeto_ParametroFiltro.id_local ); listados_changeZonas(Objeto_ParametroFiltro.id_Anexos,Objeto_ParametroFiltro.id_local,Objeto_ParametroFiltro.id_almacen )">
                                <option value="0">[ ----  TODOS  --- ]</option>
                                <option ng-repeat="item in Lista_Local" value="{{item.id}}">{{item.descripcion}}</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <label class="control-label" for="cbo_almacen">Almacen</label> <span class="help-block"></span>
                            <select class="selectFiltros" id="cbo_almacen" ng-model="Objeto_ParametroFiltro.id_almacen" ng-change="listados_changeZonas(Objeto_ParametroFiltro.id_Anexos,Objeto_ParametroFiltro.id_local,Objeto_ParametroFiltro.id_almacen );">
                                <option value="0">[ ----  TODOS  --- ]</option>
                                <option ng-repeat="item in Lista_Almacen" value="{{item.id}}">{{item.descripcion}}</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <label class="control-label" for="cbo_zonas"> Zona Venta</label> <span class="help-block"></span>
                            <select class="selectFiltros" id="cbo_zonas" ng-model="Objeto_ParametroFiltro.id_zona" >
                                <option value="0">[ ----  TODOS  --- ]</option>
                                <option ng-repeat="item in Lista_zonas" value="{{item.id}}">  {{item.descripcion}} </option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <label for="cbo_TipoDoc" class="control-label">Tipo de Documento</label> <span class="help-block"></span>
                            <select class="selectFiltros" id="cbo_TipoDoc" ng-model="Objeto_ParametroFiltro.id_TipoDocumento">
                                <option value="0">[ -TODOS- ]</option>
                                <option ng-repeat="item in Lista_TipoDoc" value="{{item.id_TipoDocumento}}">{{item.Descripcion_TipoDocumento}}</option>
                            </select>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-12" style=" margin-bottom: -20px;">
                            <div class="form-group">
                                <label class="col-sm-12 control-label" style="text-align :left">Rango de Fechas</label>
                                <br>
                                <div class="input-group col-sm-12">
                                    <input ng-model="Objeto_ParametroFiltro.fecha_ini" id="dtp_fechaIni_filtro" type="text" class="form-control datepicker" placeholder="dia/mes/año">
                                    <span class="input-group-addon bg-primary" style="color:white"> Hasta </span>
                                    <input ng-model="Objeto_ParametroFiltro.fecha_fin" id="dtp_fechaFin_filtro" type="text" class="form-control datepicker" placeholder="dia/mes/año">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12" style=" margin-bottom: -20px;margin-top: -4px;">
                            <div class="form-group" style=" margin-top: 5px; text-align:center ">
                                <button class="btn btn-primary" ng-click="mostrar_Reporte()"><span class="glyphicon glyphicon-print"></span> Mostrar</button>
                                <button class="btn btn-danger" ng-click="mostrar_documentos()"><span class="glyphicon glyphicon-download-alt"></span> Detalle Documentos</button>
                                <button class="btn btn-warning" ng-click="mostrar_productos()"><span class="glyphicon glyphicon-download"></span> Detalle Productos</button>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-inline ">
                        <div class="row">
                            <div class="col-sm-12">
                                <div style="text-align:center">
                                    <div class="loaderModal" ng-if="loaderFiltro"></div>
                                </div>
                            </div>
                        </div>
                        <a id="id_link" href="" download style="display:none">link</a>
                    </div>

                </div>
                </div>

            <div class="col-sm-12 col-md-3 col-lg-3">
            </div>
        </div>

    </div>
</div>

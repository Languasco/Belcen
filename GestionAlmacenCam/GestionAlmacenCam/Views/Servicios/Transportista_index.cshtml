<div class=" container" ng-init="initAll();">
    <div class="panel-body ContentFilters">
        <div class="form-inline ">
            <div class="row">
                <div class="col-sm-12">
                    <div style="text-align:center">
                        <div class="cssload-speeding-wheel" ng-if="loader"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="white-box" style="border-left: 20px solid #2b4c6c;">
                    <table id="tbl_Transportits" class="table m-b-0 toggle-arrow-tiny" data-page-size="10">
                        <thead>
                            <tr>
                                <th data-toggle="true">#</th>
                                <th data-toggle="true" id="paddin-lef">NOMBRE TRANSPORTISTA</th>
                                <th data-toggle="true">MODELO_VEHICULO</th>
                                <th data-toggle="true">MARCA_VEHICULO</th>
                                <th data-toggle="true">PLACA_VEHICULO</th>
                                <th data-toggle="true">DOCUMENTO_TRANSP</th>
                                <th data-toggle="true">TELEFONO_TRANSP</th>
                                <th data-toggle="true">DIRECCION_TRANSP</th>
                                <th data-toggle="true"> ESTADO</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="form-inline contentRegTable">
                                    <button id="btn-material" class="btn btn-outline btn-primary btn-sm" ng-click="Open_New_Modal();">
                                        <i class="glyphicon glyphicon-plus"></i>Agregar Nuevo
                                    </button>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    Registros
                                    <span>
                                        <select id="demo-show-entries" class="form-control input-sm">
                                            <option value="10">10</option>
                                        </select>
                                    </span>

                                    &nbsp;&nbsp; &nbsp;&nbsp;
                                    Estado
                                    <span>
                                        <select class="form-control input-sm" ng-model="estados" id="cboestadoFilter" ng-change="changeEstado(estados)" style=" border: 1.4px solid #2b4c6c;    font-size: 14px;font-family: sans-serif;">
                                            <option value="0">[ -- Todos --]</option>
                                            <option value="1">Activos</option>
                                            <option value="2">Anulados</option>
                                        </select>
                                    </span>
                                </label>
                            </div>
                            <div class="form-group">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-addon">Buscar</span>
                                    <input id="inputSearch" type="text" placeholder="Busqueda General . . " style="width:100%; margin-right:30%" class="form-control btn-block inputSearch" autocomplete="off">
                                </div>
                            </div>
                        </div>
                        <tbody>
                            <tr ng-repeat="item in listandoTrans">
                                <td>{{$index + 1}}</td>
                                <td id="paddin-lef">{{item.nombre_Transportista}}</td>
                                <td>{{item.modelo_Vehiculo}}</td>
                                <td>{{item.marca_Vehiculo}}</td>
                                <td>{{item.vehiculo_Placa}}</td>
                                <td>{{item.documento_Transportista}}</td>
                                <td>{{item.telefono_Transportista}}</td>
                                <td>{{item.direcion_Transportista}}</td>
                                <td class="classEstado{{item.estado}}" style="{{item.estado == 0 | iif : 'background-color: #f1a0a0 !important;color:#3b443b' : 'background-color:#80f093 !important;color:#3b443b'}}">{{item.estado == 0 | iif : "Anulado" : "Activado"}}</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline " ng-click="Open_Update_Modal(item);"><i class=" ti-pencil-alt"></i></button>
                                    <button type="button" class="btn btn-success btn-circle" ng-click="getAuditoria(item)"><i class="fa fa-cog"></i> </button>
                                    <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline " ng-click="getAnular(item);"><i class="ti-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="text-right">
                        <ul class="pagination pagination-split m-t-30"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="ModalTransp" class="modal fade bd-example-modal-lg " tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background:#4986c1;  padding: 15px; border-bottom: 2px solid #f71166; color:#ffffff">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myLargeModalLabel" style="color: #fcfdff !important;">{{titleModal}}</h4>
            </div>
            <div class="modal-body">

                <div class="loaderModal" ng-if="loaderSave"></div>

                <div class="contentRegistro floating-labels form-inline">
                    <fieldset>
                        <legend>INGRESO DE DATOS GENERALES DE TRANSPORTISTA :</legend>
                        <div class="row">
                            <div class="col-md-8">
                                <label for="cbo_vehiculo" style="top:-5px !important; color: #f71333; font-weight: 600; letter-spacing: 1px;">VEHICULOS</label> <span class="help-block"></span>
                                <select class="select_modal" id="cbo_vehiculo" style="width:95%;" data-style="btn-default" ng-model="objeto_parametros.id_vehiculo">
                                    <option value="0">[ ----   Seleccione  --- ]</option>
                                    <option ng-repeat="item in Lista_Vehiculos" value="{{item.id_vehiculo}}">{{item.modelo_Vehiculo}}</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="txtnombre_trans" ng-model="objeto_parametros.nombre_Transportista" maxlength="35"><span class="highlight"></span> <span class="bar"></span>
                                <label for="txtnombre_trans">NOMBRES Y APELLIDOS</label> <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txtDNI" ng-model="objeto_parametros.documento_Transportista" ng-keypress="ValidationNumber($event);" maxlength="8"><span class="highlight"></span> <span class="bar"></span>
                                <label for="txtDNI">DOCUMENTO DE IDENTIDAD</label> <span class="help-block"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="txtcel_trs" ng-model=" objeto_parametros.telefono_Transportista" ng-keypress="ValidationNumber($event);" maxlength="9"><span class="highlight"></span> <span class="bar"></span>
                                <label for="txtcel_trs">TELEFONO /CELULAR</label> <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <input type="text" class="form-control" id="txtdirec_trs" ng-model=" objeto_parametros.direcion_Transportista"><span class="highlight"></span> <span class="bar"></span>
                                <label for="txtdirec_trs">DIRECCION DE TRANSPORTISTA</label> <span class="help-block"></span>
                            </div>
                        </div>

                    </fieldset>
                </div>

                <div class="contentRegistro floating-labels form-inline">
                    <div>
                        <div class="row ">
                            <div class="col-sm-6">
                                <fieldset>
                                    <legend>Estado</legend>
                                    <div class="row " style=" margin-top: -10px;">
                                        <div class="col-sm-6 ">
                                            <div class="form-group">
                                                <div class="checkbox checkbox-success">
                                                    <input id="checkbox1" type="checkbox" ng-model="objEstados.activo" ng-change="changeStatus(objEstados.activo);">
                                                    <label for="checkbox1" class="estadoModal" style="color : {{objEstados.colorText}}">{{objEstados.text}}</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer ">
                <a class="btn btn-primary" ng-click="GuardarRegistro();" id="btn-save"> <span class="glyphicon glyphicon-floppy-disk"></span> Guardar</a>
                <a class="btn btn-danger" data-dismiss="modal" id="btn-close"><span class="glyphicon glyphicon-remove-sign"></span> Cerrar</a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

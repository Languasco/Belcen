<div class=" container" ng-init="initAll();">
    <div class="panel-body ContentFilters">
        <div class="form-inline ">
            <div class="row">
                <div class="col-sm-12">
                    <div style="text-align:center">
                        <div class="cssload-speeding-wheel" ng-if="loader"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="white-box" style="border-left: 20px solid #2b4c6c;">
                    <table id="tbl_formaPago" class="table m-b-0 toggle-arrow-tiny" data-page-size="7">
                        <thead>
                            <tr>
                                <th data-toggle="true">#</th>
                                <th data-toggle="true" id="paddin-lef">TIPO DE FORMAPAGO</th>
                                <th data-toggle="true" id="paddin-lef">USUARIO </th>
                                <th data-toggle="true" id="paddin-lef">FECHA</th>
                                <th data-toggle="true">ESTADO</th>
                                <th >Acciones</th>
                            </tr>
                        </thead>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="form-inline contentRegTable">
                                    <button id="btn-material" class="btn btn-outline btn-primary btn-sm" ng-click="Open_New_Modal();">
                                        <i class="glyphicon glyphicon-plus"></i>Agregar Nuevo
                                    </button>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    Registros
                                    <span>
                                        <select id="demo-show-entries" class="form-control input-sm">
                                            <option value="7">7</option>
                                        </select>
                                    </span>

                                    &nbsp;&nbsp; &nbsp;&nbsp;
                                    Estado
                                    <span>
                                        <select class="select_modal" id="cboestadoFilter" ng-model="estados" data-style="btn-default" ng-change="changeEstado(estados)">
                                            <option ng-repeat="item in listStatus" value="{{item.id}}">{{item.descripcion}}</option>
                                        </select>
                                    </span>
                                </label>
                            </div>
                            <div class="form-group">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-addon">Buscar</span>
                                    <input id="inputSearch" type="text" placeholder="Busqueda General . . " style="width:25%; margin-right:30%" class="form-control btn-block inputSearch" autocomplete="off" onkeyup="this.value=this.value.toUpperCase();">
                                </div>
                            </div>
                        </div>
                        <tbody>
                            <tr ng-repeat="item in listformPago">
                                <td>{{$index + 1}}</td>
                                <td id="paddin-lef">{{item.descripcion_FromaPag}}</td>
                                <td id="paddin-lef">{{item.usuario_Creacion}}</td>
                                <td id="paddin-lef">{{item.fecha_Edicion}}</td>
                                <td class="classEstado{{item.estado}}" style="{{item.estado == 0 | iif : 'background-color: #f1a0a0 !important;color:#3b443b' : 'background-color:#80f093 !important;color:#3b443b'}}">{{item.estado == 0 | iif : "Anulado" : "Activado"}}</td>
                                <td >
                                    @*<button type="button" class="btn btn-info btn-circle" ng-click="Open_Update_Modal(item);"><i class="fa fa-pencil"></i> </button>*@
                                    <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline " ng-click="Open_Update_Modal(item);"><i class=" ti-pencil-alt"></i></button>
                                    <button type="button" class="btn btn-success btn-circle" ng-click="getAuditoria(item)"><i class="fa fa-cog"></i> </button>
                                    <button type="button" class="btn btn-warning btn-circle" ng-click="getAnular(item);" style="background-color: #ff6849; border-color: #ff6849;"><i class="fa fa-trash"></i> </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="text-right">
                        <ul class="pagination pagination-split m-t-30"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="ModalformPgo" class="modal fade bd-example-modal-lg " tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background:#0f66bb;  padding: 15px; border-bottom: 2px solid #ef0752; color:#ffffff">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myLargeModalLabel" style="color: #fcfdff !important;">{{titleModal}}</h4>
            </div>
            <div class="modal-body">

                <div class="loaderModal" ng-if="loaderSave"></div>

                <div class="contentRegistro floating-labels form-inline">
                    <fieldset>
                        <legend>INGRESO DEl DATOS DE FORMA DE PAGO</legend>
                        <div class="row">
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txtnombre_tipo" ng-model="objeto_parametros.descripcion_FromaPag" maxlength="30" onkeyup="this.value=this.value.toUpperCase();"><span class="highlight"></span> <span class="bar"></span>
                                <label for="txtnombre_tipo">NOMBRE DE TIPO_PAGO</label> <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-sm-6">
                                <fieldset>
                                    <legend>Estado</legend>
                                    <div class="row " style=" margin-top: -10px;">
                                        <div class="col-sm-6 ">
                                            <div class="form-group">
                                                <div class="checkbox checkbox-success">
                                                    <input id="checkbox1" type="checkbox" ng-model="objEstados.activo" ng-change="changeStatus(objEstados.activo);">
                                                    <label for="checkbox1" class="estadoModal" style="color : {{objEstados.colorText}}">{{objEstados.text}}</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>

                    </fieldset>
                </div>

            </div>
            <div class="modal-footer ">
                <a class="btn btn-primary" ng-click="GuardarRegistro();" id="btn-save"> <span class="glyphicon glyphicon-floppy-disk"></span> Guardar</a>
                <a class="btn btn-danger" data-dismiss="modal" id="btn-close"><span class="glyphicon glyphicon-remove-sign"></span> Cerrar</a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<style>
    .contentCombo .select2-container {
        margin-left: 0px;
        margin-top: -20px;
        width: 98% !important;
    }
</style>

<div class=" container" ng-init="initAll();">
    <div class="panel-body ContentFilters contentCombo"> 

        <div class="well" style="background-color:#dfe4ea;padding-bottom:0px;padding-top:0px">
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="cbo_puntoventa">Punto de Venta</label> <span class="help-block"></span>
                            <select class="selectFiltros" id="cbo_puntoventa" ng-model="Objeto_ParametroFiltro.puntoventa">
                                <option value="0">[ ----  Seleccione  --- ]</option>
                                <option ng-repeat="item in Lista_PuntoVenta" value="{{item.id_PuntoVenta}}">{{item.direccion_PuntoVenta}}</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="cbo_vendedor">Vendedor</label> <span class="help-block"></span>
                            <select class="selectFiltros" id="cbo_vendedor" ng-model="Objeto_ParametroFiltro.vendedor">
                                <option value="0">[ ----  TODOS  --- ]</option>
                                <option ng-repeat="item in Lista_Vendedor" value="{{item.id_personal}}">{{item.apellidos_personal}} : {{item.nombres_personal}}</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="cbo_docVenta">Doc Venta</label> <span class="help-block"></span>
                            <select class="selectFiltros" id="cbo_docVenta" ng-model="Objeto_ParametroFiltro.documVenta">
                                <option value="0">[ ----  Seleccione  --- ]</option>
                                <option ng-repeat="item in Lista_TipoDocumento" value="{{item.id_TipoDocumento}}">{{item.Descripcion_TipoDocumento | uppercase}}</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="cbo_estado">Estado</label> <span class="help-block"></span>
                            <select class="selectFiltros" id="cbo_estado" ng-model="Objeto_ParametroFiltro.estado">
                                <option value="0">[ ----  Seleccione  --- ]</option>
                                <option ng-repeat="item in Lista_Estados" value="{{item.id_Estado}}">{{item.nombre_estado | uppercase}}</option>
                            </select>
                        </div>

 
                    </div>

                    <div class="row" style=" margin-bottom: 5px;">
                        <div class="col-sm-9" style=" margin-top: 1px;">
                            <div class="input-group input-group-sm">
                                <span class="input-group-addon">Buscar</span>
                                <input id="inputSearch" type="text" placeholder="Busqueda General . . " style="width:100%" class="form-control btn-block inputSearch" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="row" style="margin-top:1px;">
                                <div class="col-md-12">
                                    <button class="btn btn-block btn-success" ng-click="Listando_Pedidos();"><span class="glyphicon glyphicon-refresh"></span> Actualizar</button>
                                </div>
                            </div>
                        </div> 
                    </div>
                    <div class="form-inline ">
                        <div class="row" >
                            <div class="col-sm-12">
                                <div style="text-align:center">
                                    <div class="cssload-speeding-wheel" ng-if="loaderSave"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="white-box">
                    <div class="checkbox clip-check check-danger checkbox-inline" style=" margin-left: 5px;">
                        <input type="checkbox" id="checkboxAll" value="1" ng-model="checkedAll" ng-click="checkedAll_ListaPedidos(checkedAll)">
                        <label for="checkboxAll"> Marcar Todos </label>
                    </div>
                    <table id="tablaDocVenta" class="table m-b-0 toggle-arrow-tiny" data-page-size="10">
                        <thead>
                            <tr>
                                <th>
 
                                </th>
                                <th>#</th>
                                <th>Numero Pedido</th>
                                <th>Fecha Entrega</th>
                                <th>Cliente</th>
                                <th>Dirección</th>
                                <th>Tip Doc</th>
                                <th>Total</th>
                                <th>Vendedor</th>
                                <th>Nro Doc Venta</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in List_Pedidos">
                                <td>
                                    <div class="checkbox clip-check check-primary checkbox-inline" >
                                        <input type="checkbox" id="checkbox{{$index}}" value="true" ng-model="item.checkeado" ng-disabled={{item.disabled}}>
                                        <label for="checkbox{{$index}}">
                                        </label>
                                    </div>
                                </td>
                                <td>{{$index+1}}</td>
                                <td>{{item.Numero_Pedido}}</td>
                                <td>{{item.fechaEntrega_Pedido_Cab | date:"dd/MM/yyyy '-' h:mma"}}</td>
                                <td>{{item.nombre_cliente}}  </td>
                                <td>{{item.direccion_Pedido_Cab}}</td>
                                <td>{{item.nombredocumento}}</td>
                                <td>{{item.total_Neto_Pedido_Cab | number:2}}</td>
                                <td>{{item.vendedor}}</td>
                                <td>{{item.Numero_Documento}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-right">
                        <ul class="pagination pagination-split m-t-30"></ul>
                    </div>
                </div>
            </div>
        </div>

        <hr />
        <div class="row" style=" margin-bottom: 5px;">
            <div class="col-md-12">
                <div class="row" style="margin-top:1px;">
                    <div class="col-md-12" >
                        <button class="btn btn-lg btn-primary" ng-click="GenerarDocumento();"><span class="glyphicon glyphicon-folder-open"></span>  Generar Documento Venta</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
